<!DOCTYPE html>
<html lang="<%= t('locale') %>">

<head>
  <%- include('../../Partials/head') %>
</head>

<body style="background: #23272A;">
  <%- include('../../Partials/loading') %>
  <header>
    <%- include('../../Partials/header') %>
  </header>
  <!-- _____________________________________________________________________________________________________ -->
  <main class="container-fluid miuky-color d-flex align-items-start justify-content-center p-4">
    <div>
      <div class="mb-md-3 mb-1">
        <h3 class="text-center">
          <strong>
            <%= t('guilds.select') %>
          </strong>
        </h3>
      </div>
      <% if (user?.guilds) { %>
      <div class="row">
        <% for (let guild of user.guilds) { %>
        <div class="col-lg-4 d-flex align-items-center justify-content-center miuky-color p-2">
          <div>
            <div class="bg-image rounded" style="height: 150px; width: 300px;">
              <img crossorigin="anonymous" src="<%= guild.icon === null ? '/img/background.png' : guild.icon.replace('.gif', '.webp') %>" style="width: 100%; height: 100%; transform: scale(1.4); filter: blur(10px); opacity: 0.3; inset: 0px;" />
              <div class="mask rounded" style="width: 100%; height: 100%;">
                <div class="d-flex justify-content-center align-items-center h-100">
                  <div>
                    <% if (guild?.icon) { %>
                    <img crossorigin="anonymous" src="<%= guild.icon === null ? '/img/miuky.png' : guild.icon %>" alt="<%= guild.name %>" class="rounded-circle" style="height: 100%; width: 70px; border: 3px solid rgba(240, 248, 255, 0.7);">
                    <% } else { %>
                    <div class="rounded-circle text-center d-flex justify-content-center align-items-center" style="height: 70px; width: 70px; border: 3px solid rgba(240, 248, 255, 0.7);">
                      <span>
                        <%= guild.name.charAt().toUpperCase() %>
                      </span>
                    </div>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
            <div class="mt-1 d-flex justify-content-between align-items-center">
              <div>
                <strong>
                  <%= guild.name %>
                </strong>
                <br>
                <span class="text-white-50" style="font-weight: normal;">
                  <%= guild.owner ? t('guilds.owner') :  t('guilds.admin') %>
                </span>
              </div>
              <div>
                <a href="<%= t('route.servers') %>/<%= guild.id %>" class="btn miuky-button">
                  <%= t('guilds.setup') %>
                </a>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
      <% } %>
    </div>
  </main>
  <!-- _____________________________________________________________________________________________________ -->
  <footer>
    <%- include('../../Partials/footer') %>
  </footer>
  <%- include('../../Partials/cookie') %>
</body>

</html>