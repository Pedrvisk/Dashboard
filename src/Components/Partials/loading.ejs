<div id="loading">
  <div class="text-center">
    <div class="d-flex justify-content-evenly">
      <div class="ball"></div>
      <div class="ball mx-2"></div>
      <div class="ball"></div>
    </div>
    <span><%= t('loading') %></span>
    <noscript>
      <div class="rounded p-3 position-relative mt-5" style="border: 1px solid #FFA900; background: #2C2F33; color: #FFA900; overflow-wrap: anywhere;">
        <span class="position-absolute top-0 start-50 start-md-0 translate-middle badge rounded bg-warning p-1 text-dark">
          <i class="fas fa-exclamation-triangle"></i>
        </span>
        <%= t('noscript') %>
      </div>
    </noscript>
  </div>
</div>

<style>
  #loading span {
    font-size: 0.9em;
    text-transform: uppercase;
    color: rgba(240, 248, 255, 0.7);
    margin: auto;
  }

  #loading .ball:nth-child(2) {
    animation-delay: 0.16s;
  }

  #loading .ball:nth-child(3) {
    animation-delay: 0.32s;
  }

  #loading .ball {
    width: 1.5em;
    height: 1.5em;
    border-radius: 50%;
    background: rgba(240, 248, 255, 0.5);
    animation: bounce 0.5s alternate infinite;
    -webkit-animation: bounce 0.5s alternate infinite;
    -o-animation: bounce 0.5s alternate infinite;
    -moz-animation: bounce 0.5s alternate infinite;
  }

  @keyframes bounce {
    from {
      transform: scaleX(1.25);
    }

    to {
      transform: translateY(-50%) scaleX(1);
    }
  }

  @-webkit-keyframes bounce {
    from {
      -webkit-transform: scaleX(1.25);
    }

    to {
      -webkit-transform: translateY(-50%) scaleX(1);
    }
  }

  @-o-keyframes bounce {
    from {
      -o-transform: scaleX(1.25);
    }

    to {
      -o-transform: translateY(-50%) scaleX(1);
    }
  }

  @-moz-keyframes bounce {
    from {
      -moz-transform: scaleX(1.25);
    }

    to {
      -moz-transform: translateY(-50%) scaleX(1);
    }
  }

  #loading {
    background: #2C2F33;
    color: aliceblue;
    width: 100%;
    height: 100%;
    display: flex;
    position: fixed;
    justify-content: center;
    align-items: center;
    z-index: 10000000000;
    transition: all 1s;
  }
</style>