    -o-transform: rotate(-45deg);
    transform: rotate(-45deg);
  }

  .navbar-toggler[aria-expanded="true"] .navbar-toggler-animation span:nth-child(4) {
    top: 11px;
    width: 0%;
    left: 50%;
